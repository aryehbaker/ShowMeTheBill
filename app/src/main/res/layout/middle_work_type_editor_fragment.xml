<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="middle"
            type="com.example.showmethebill.middleWorkType"/>
        <variable
            name="fragment"
            type="com.example.showmethebill.ui.middleworktypeeditor.MiddleWorkTypeEditorFragment"/>

    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/middleworktypeeditor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.middleworktypeeditor.MiddleWorkTypeEditorFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middle_worktype_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="worktype"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middleworktype"
        app:layout_constraintTop_toBottomOf="@+id/middle_worktype_label"
        app:layout_constraintStart_toStartOf="@+id/middle_worktype_label"
        android:padding="4dp"
        android:text="@{middle.WorkType}"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middle_id_label"
        android:text="Id:"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@+id/middleworktype"
        app:layout_constraintTop_toBottomOf="@+id/middleworktype"
       />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middleid"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/middle_id_label"
        app:layout_constraintStart_toStartOf="@+id/middle_id_label"
        android:text="@{Integer.toString(middle.id)}"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middle_id_general_label"
        app:layout_constraintTop_toBottomOf="@+id/middleid"
        app:layout_constraintStart_toStartOf="@+id/middleid"
        android:text="general id:"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middleidgeneral"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/middle_id_general_label"
        app:layout_constraintStart_toStartOf="@+id/middle_id_general_label"
        android:text="@{Integer.toString(middle.generalId)}"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middle_worktype_cost_label"
        android:text="Cost:"
        app:layout_constraintTop_toBottomOf="@+id/middleidgeneral"
        app:layout_constraintStart_toStartOf="@+id/middleidgeneral"/>
    <EditText
        android:id="@+id/middle_worktype_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/middle_worktype_cost_label"
        app:layout_constraintStart_toStartOf="@+id/middle_worktype_cost_label"
        android:text="@{String.valueOf(middle.cost)}"/>
    <Button
        android:id="@+id/middle_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/middle_worktype_cost"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>