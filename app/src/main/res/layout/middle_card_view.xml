<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="middleWorkType"
            type="com.example.showmethebill.middleWorkType"/>
    </data>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/middle_work_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{middleWorkType.WorkType}"
                android:textSize="32sp"
                tools:text="repair"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/middle_work_type_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@{Integer.toString(middleWorkType.id)}"
                tools:text="12345"
                app:layout_constraintStart_toStartOf="@id/middle_work_type"
                app:layout_constraintTop_toBottomOf="@id/middle_work_type"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/middle_cost"
                android:textSize="24sp"
                android:text="@{String.valueOf(middleWorkType.cost)}"
                app:layout_constraintStart_toStartOf="@id/middle_work_type"
                app:layout_constraintTop_toBottomOf="@id/middle_work_type_id"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/middle_genid"
            android:textSize="24sp"
            android:text="@{String.valueOf(middleWorkType.generalId)}"
            app:layout_constraintStart_toStartOf="@id/middle_work_type"
            app:layout_constraintTop_toBottomOf="@id/middle_cost"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>